<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Message Board | Login</title>

    <script type="text/javascript" src='/js/jquery-3.1.0.js'></script>
    <script type="text/javascript" src='/js/index.js'></script>

    <link rel="stylesheet" href="/css/index.css" />
    </script>
  </head>
  <body>
    <header>
      <h3><span id="signin" class="button">Sign In</span> | <span id="signup" class="button">Sign Up</span></h3>
    </header>
    <main>
      <% if (start){ %>
        <img src="/img/mean.png" alt="MEAN Stack" />

        <form id="login-form" class="main-form" action="/login" method="post" style="display: none">
          <p class="error" id="l-email-err"><%= email %></p>
          <input type="text" name="email" placeholder="eMail" value="<%= inpemail %>">
          <p class="error" id="l-password-err"><%= password %></p>
          <input type="password" name="password" placeholder="Password" value="<%= inppwd %>">
          <input type="submit" value="Sign In" class="button">
        </form>

        <form id="register-form" class="main-form" action="/register" method="post" style="display: none">
          <p class="error" id="r-fname-err"><%= fname %></p>
          <input type="text" name="fname" placeholder="First Name" value="<%= inpfname %>">
          <p class="error" id="r-lname-err"><%= lname %></p>
          <input type="text" name="lname" placeholder="Last Name" value="<%= inplname %>">
          <p class="error" id="r-email-err"><%= email %></p>
          <input type="text" name="email" placeholder="eMail" value="<%= inpemail %>">
          <p class="error" id="r-password-err"><%= password %></p>
          <input type="password" name="password" placeholder="Password" value="<%= inppwd %>">
          <p class="error" id="r-c_password-err"><%= cpassword %></p>
          <input type="password" name="c_password" placeholder="Confirm Password" value="<%= inpcpwd %>">
          <input type="submit" value="Sign Up" class="button">
        </form>
      <% } else if (login){ %>
        <img src="/img/mean.png" alt="MEAN Stack" style="display: none"/>

        <form id="login-form" class="main-form" action="/login" method="post">
